<mvc:View controllerName="fioriconplantilla.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m">

    <Page id="pageMain" title="Mi Perfil" class="sapUiContentPadding">

        <content>

            <!-- Panel tipo Card -->
            <Panel id="panelPerfil" class="sapUiLargeMargin" headerText="Mi Perfil" expandable="false" width="100%" backgroundDesign="Solid">
                
                <VBox class="sapUiSmallMargin">

                    <HBox alignItems="Center" class="sapUiMediumMarginBottom">

                        <!-- Imagen redonda -->
                        <Image 
                            id="imgProfile"
                            src="https://avatars.githubusercontent.com/u/92339059?v=4"
                            width="120px"
                            height="120px"
                            class="profileImage sapUiSmallMarginEnd"/>

                        <VBox>

                            <ObjectHeader
                                id="ohNombre"
                                title="{local>/usuario/nombre} {local>/usuario/apellido}" />

                            <ObjectAttribute 
                                id="attrEmail"
                                title="Email"
                                text="{local>/usuario/email}" />

                            <Link 
                                id="linkGithub"
                                text="GitHub"
                                href="{local>/usuario/github}"
                                target="_blank"/>

                        </VBox>

                    </HBox>

                    <HBox id="hboxButtons" class="sapUiMediumMarginTop">
                        <Button 
                            id="btnHobbies"
                            text="Mis Hobbies" 
                            press=".onNavToHobbies"
                            type="Emphasized"
                            class="sapUiSmallMarginEnd" />

                        <Button 
                            id="btnProfesional"
                            text="Info Profesional" 
                            press=".onNavToProfesional" />
                    </HBox>

                </VBox>

            </Panel>

        </content>

    </Page>

</mvc:View>
